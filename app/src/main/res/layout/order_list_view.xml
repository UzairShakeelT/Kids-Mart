<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grey_background">

        <TextView
            android:id="@+id/tvOrderID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order ID: "
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#4a4b4b"
            android:layout_below="@id/recDate"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp" />

        <TextView
            android:id="@+id/orderID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="order ID"
            android:textSize="15sp"
            android:textColor="#4a4b4b"
            android:layout_toEndOf="@id/tvOrderID"
            android:layout_below="@id/recDate"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp" />

        <TextView
            android:id="@+id/recDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="15sp"
            android:textColor="#4a4b4b"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="15sp"
            android:textColor="@color/orange"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/recPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textColor="@color/orange"
            android:textSize="16sp"
            android:inputType="number"
            android:layout_below="@id/tvQuantity"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10sp"
            android:layout_marginStart="15dp" />

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Qty:"
            android:textColor="#4a4b4b"
            android:textAlignment="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tvOrderID"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Details>>"
            android:textSize="13sp"
            android:textColor="@color/orange"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tvQuantity"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>